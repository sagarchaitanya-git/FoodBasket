@model FoodBasket.Models.Currency

@{
    ViewData["Title"] = "AddCurrency";
}

<h1>AddCurrency</h1>

<h4>Currency</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCurrency">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrencyShortName" class="control-label"></label>
                <input asp-for="CurrencyShortName" class="form-control" />
                <span asp-validation-for="CurrencyShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyName" class="control-label"></label>
                <input asp-for="CurrencyName" class="form-control" />
                <span asp-validation-for="CurrencyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyIcon" class="control-label"></label>
                <input asp-for="CurrencyIcon" class="form-control" />
                <span asp-validation-for="CurrencyIcon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CurrencyList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
