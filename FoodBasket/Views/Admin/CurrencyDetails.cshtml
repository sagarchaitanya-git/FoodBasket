@model FoodBasket.Models.Currency

@{
    ViewData["Title"] = "CurrencyDetails";
}

<h1>CurrencyDetails</h1>

<div>
    <h4>Currency</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrencyShortName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrencyShortName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrencyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrencyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrencyIcon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrencyIcon)
