@model IEnumerable<FoodBasket.Models.Currency>

@{
    ViewData["Title"] = "CurrencyList";
}

<h1>CurrencyList</h1>

<p>
    <a asp-action="AddCurrency">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyIcon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyIcon)
            </td>
            <td>
                    <a asp-action="EditCurrency" asp-route-id="@item.CurrencyId">Edit</a> |
                    <a asp-action="CurrencyDetails" asp-route-id="@item.CurrencyId">Details</a> |
                    <a asp-action="DeleteCurrency" asp-route-id="@item.CurrencyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
